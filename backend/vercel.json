{
    "version": 2,
    "builds": [
      {
        "src": "backend/api/**/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build"
      }
    ],
    "routes": [
      { "src": "/api/send-email", "dest": "/backend/api/send-email.js" },
      { "src": "/(.*)", "dest": "/frontend/$1" }
    ]
  }
  